@model Model.ModelCourseM.ModelCourse

<div class="row">
    <div class="col-md-12">
        <form asp-action="DesignationForm" asp-route-id="@Model" method="post">
            <input type="hidden" asp-for="CourseId" />

            <div class="row">
                <div class="col-lg-12 mb-3">
                    <label class="form-label" asp-for="CourseName">CourseName</label>
                    <input type="text" asp-for="CourseName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 mb-3">
                    <label class="form-label" asp-for="CourseDescription">CourseDescription</label>
                    <input type="text" asp-for="CourseDescription" class="form-control" autocomplete="off" />
                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mb-3">
                    <label class="form-label" asp-for="CreditHours">CreditHours</label>
                    <input type="text" asp-for="CreditHours" class="form-control" autocomplete="off" />
                    <span asp-validation-for="CreditHours" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="/Course/Designation" class="btn btn-danger">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>