@model IEnumerable<Model.ModelEnrollmentM.ModelEnrollment>

<div class="col-12 formHeader">
    <div class="formHeaderContent">
        <h6>
            Designation
        </h6>
    </div>
    <table id="DesignationTable" class="table table-light table-striped table-hover display" style="width:100%">
        <thead>
            <tr>
                <th>
                    EnrollmentId
                </th>
                <th>
                    StudentId
                </th>
                <th>
                    CourseId
                </th>
                <th>
                    EnrollmentDate
                </th>
                <th class="text-center">
                    <a href="/Enrollment/DesignationForm/0" class="btn btn-success text-white">
                        <i class='fa-solid fa-file-circle-plus'></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                var count = 0;
                foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.EnrollmentId</td>
                        <td>@item.StudentId</td>
                        <td>@item.CourseId</td>
                        <td>@item.EnrollmentDate</td>

                        <td class="text-center">
                            <div>
                                <a href="/Enrollment/DesignationForm?ID=@item.EnrollmentId" class="btn btn-outline-warning"><i class="fa-solid fa-edit"></i></a>

                                <a href="/Enrollment/DeleteDesignation?ID=@item.EnrollmentId" class="btn btn-outline-danger"><i class="fa-solid fa-trash-can"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot></tfoot>
    </table>
</div>