@model Model.ModelStudentM.ModelStudent

<div class="row">
    <div class="col-md-12">
        <form asp-action="DesignationForm" asp-route-id="@Model" method="post" autocomplete="off">
            <input type="hidden" asp-for="StudentId" />

            <div class="row">
                <div class="col-lg-12 mb-3">
                    <label class="form-label" asp-for="StudentName">StudentName</label>
                    <input type="text" asp-for="StudentName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 mb-3">
                    <label class="form-label" asp-for="DateOfBirth">DateOfBirth</label>
                    <input type="text" asp-for="DateOfBirth" class="form-control" autocomplete="off" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input type="text" asp-for="Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mb-3">
                    <label class="form-label" asp-for="PhoneNumber">PhoneNumber</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="/Student/Designation" class="btn btn-danger">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>